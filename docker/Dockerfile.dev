FROM python:3.8-alpine

RUN echo "http://dl-3.alpinelinux.org/alpine/edge/main" >> /etc/apk/repositories
RUN apk update
RUN apk add --upgrade apk-tools

RUN apk add \
    --update alpine-sdk

RUN apk add openssl \
    ca-certificates
RUN apk add \
    libxml2-dev \
    libxslt-dev \
    xmlsec-dev
RUN apk add postgresql-dev \
    libffi-dev\
    jpeg-dev

RUN apk add --update-cache --repository http://dl-cdn.alpinelinux.org/alpine/edge/community/ \
    geos \
    gdal

RUN apk add --no-cache --virtual .build-deps2 --repository http://dl-cdn.alpinelinux.org/alpine/edge/community/ \
    geos-dev \
    gdal-dev

RUN apk add --update-cache --repository http://dl-3.alpinelinux.org/alpine/edge/testing/ \
    gcc \
    g++

RUN pip install --upgrade \
    setuptools \
    pip \
    wheel \
    pipenv \
    poetry

Add poetry.lock .
Add pyproject.toml .

RUN poetry config virtualenvs.create false
RUN poetry install --no-dev --no-interaction --no-ansi
RUN apk add bash
RUN mkdir /tmp/static

ENV PYTHONUNBUFFERED 1
ENV PYTHONPATH /code
ENV DJANGO_SETTINGS_MODULE etools_datamart.config.settings

VOLUME "./:/code/"
WORKDIR /code/
